{{#each dbArticles}}
   <div class="container">
        <div class="row">
            <div class="col-sm-10 col-md-10">
                <div class="thumbnail">
                    
                    <img src="{{this.image}}" alt="article image">
                    <div class="caption">
                        <h3><a href="{{this.link}}">{{this.title}}</a></h3>
                        <p>{{this.teaser}}</p>
                        {{!--<p><a type="button" class="btn btn-default" data-toggle="modal" data-target="#commentModal">Add Your 2¢</a>--}}
                    </div>

                    <div class="panel panel-default" id="display-comment-panel">
                        <div class="panel-body">
                            Comments go here
                            
                        </div>
                    </div>

                    <div class="panel panel-default" id="add-comment-panel">
                        <div class="panel-heading">
                            <h3 class="panel-title">Add Your 2¢</h3>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="usr">Name:</label>
                                <input type="text" class="form-control" id="usr">
                            </div>
                            <div class="form-group">
                                <label for="comment">Comment:</label>
                                <textarea class="form-control" rows="5" id="comment"></textarea>
                            </div>     
                            <input class="btn btn-primary" id="submit-btn" type="submit" value="Submit">                       
                        </div>
                    </div>

                </div>
            </div>
        </div>
   </div>
{{/each}}



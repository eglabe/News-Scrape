{{#each dbArticles}}
   <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                <img src="{{this.image}}" alt="article image">
                <div class="caption">
                    <h3><a href="{{this.link}}">{{this.title}}</a></h3>
                    <p>{{this.teaser}}</p>
                    <p><a href="#" class="btn btn-primary" role="button">Comment</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                </div>
                </div>
            </div>
        </div>
   </div>
{{/each}}